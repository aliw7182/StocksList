<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/gray_bg_radius_16">

    <ImageView
        android:id="@+id/uiIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_16"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/uiName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintStart_toEndOf="@id/uiIcon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/uiSubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:textSize="12sp"
        android:textColor="#1A1A1A"
        android:layout_marginBottom="14dp"
        app:layout_constraintTop_toBottomOf="@+id/uiName"
        app:layout_constraintStart_toEndOf="@id/uiIcon"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/uiStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toEndOf="@+id/uiName"
        app:layout_constraintTop_toTopOf="@+id/uiName"
        />
    <TextView
        android:id="@+id/uiPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/uiSubPrice"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"/>
    <TextView
        android:id="@+id/uiSubPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uiPrice"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="17dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>